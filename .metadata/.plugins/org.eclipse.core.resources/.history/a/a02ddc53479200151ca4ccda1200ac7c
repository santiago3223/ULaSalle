#ifndef PUZZLE_H_
#define PUZZLE_H_

class Puzzle {
public:
	Puzzle();
	Puzzle(char * items, int size);
private:
	int size;
	int posActual;
	int * datos;
	int cantidadMovimientos;
	int **pasos;
	void CrearPuzzleAleatorio();
	void ResolverPuzzle();
	void ImprimirPaso(int i);
	virtual ~Puzzle();
};

#endif /* PUZZLE_H_ */
