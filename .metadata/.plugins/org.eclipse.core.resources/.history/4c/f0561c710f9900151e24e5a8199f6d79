#ifndef BTREENODE_H_
#define BTREENODE_H_
template<class T>
class BTreeNode
{
    T *keys;
    int t;
    BTreeNode<T> **C;
    int n;
    bool leaf;
public:
    BTreeNode(int t1, bool leaf1){
    	t = t1;
		leaf = leaf1;

		keys = new int[t];
		C = new BTreeNode<T> *[t+1];

		n = 0;
    }

    //void insertNonFull(int k);

    void insertar(int & k, BTreeNode<T> * & p);

    //void splitChild(int i, BTreeNode<T> *y);

    //bool hayEspacio(int k);

    //BTreeNode<T> *search(int k, BTreeNode<T> * &q);

    void printDot(ofstream& os);

    friend class BTree;
};



#endif /* BTREENODE_H_ */
